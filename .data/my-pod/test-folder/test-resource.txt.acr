# ACR for the test resource
@prefix acl: <http://www.w3.org/ns/auth/acl#>.
@prefix acp: <http://www.w3.org/ns/solid/acp#>.

<#test-resource.txt>
    a acp:AccessControlResource;
    acp:resource <./test-resource.txt>;
    acp:accessControl <#publicReadAccess>.

<#publicReadAccess>
    a acp:AccessControl;
    acp:apply [
        a acp:Policy;
        acp:allow acl:Read;
        acp:allOf [
            a acp:Matcher;
            acp:client "my-demo-app";
            acp:issuer <did:web:raw.githubusercontent.com:euan-gilmour:dids:main:issuer>;
            acp:agent <did:web:raw.githubusercontent.com:euan-gilmour:dids:main:user>;
        ]
    ].
